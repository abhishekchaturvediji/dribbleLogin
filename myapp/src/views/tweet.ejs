<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tweet</title>
</head>
<body>
    <form action="/add-tweet" method="post">
        <textarea rows="4" cols="50" placeholder="Tweet kr na re baba" id="" name="tweet"></textarea>
        <button type="submit">Tweet</button>
    </form>

    <h2>All tweets</h2>

    <% if(AllTweet && AllTweet.length > 0){ %>
        <% AllTweet.forEach((data,index) => { %>
            <h3>
                <div style="display: flex; align-items :center;justify-content:space-between;" >
                    <span>
                        <%= index + 1 %> . <%= data.tweets  %>
                    </span>
                    <a style="margin-left:300px ;" href="/delete-tweet?id=<%= data.id %>">delete tweet</a>
                </div>
            </h3>
        <% }) %>
    <% }else{ %>
        <h5>No tweets</h5>
    <% } %>
    
</body>
</html>